@model NewsManagementSystem.Models.Category

@{
    ViewData["Title"] = "Update Category";
}

<div class="container">
    <h1 class="text-primary text-center fw-bold pb-2">Update Category</h1>
    <h4 class="text-secondary">Category Details</h4>
    <hr />

    <div class="row">
        <div class="col-md-6 mx-auto">
            <form asp-action="UpdateCategory" class="p-3 border rounded shadow bg-light">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <input type="hidden" asp-for="CategoryId" />

                <!-- Category Name -->
                <div class="form-group mb-3">
                    <label asp-for="CategoryName" class="control-label fw-bold"></label>
                    <input asp-for="CategoryName" class="form-control" />
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>

                <!-- Category Description -->
                <div class="form-group mb-3">
                    <label asp-for="CategoryDesciption" class="control-label fw-bold"></label>
                    <textarea asp-for="CategoryDesciption" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="CategoryDesciption" class="text-danger"></span>
                </div>

                <!-- Parent Category Dropdown -->
                <div class="form-group mb-3">
                    <label asp-for="ParentCategoryId" class="control-label fw-bold"></label>
                    <select asp-for="ParentCategoryId" class="form-control" asp-items="ViewBag.ParentCategoryId">
                        <option value="0">No Parent Category</option>
                    </select>
                    <span asp-validation-for="ParentCategoryId" class="text-danger"></span>
                </div>

                <!-- Is Active (Checkbox) -->
                <div class="form-group form-check mb-3">
                    <input type="checkbox" class="form-check-input" id="IsActive" name="IsActive" value="true" @(Model.IsActive == true ? "checked" : "") />
                    <input type="hidden" name="IsActive" value="false" />
                    <label class="form-check-label" for="IsActive">Active</label>
                </div>

                <!-- Buttons -->
                <div class="form-group mt-3 d-flex justify-content-between">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save"></i> Save Changes
                    </button>
                    <a asp-action="ListCategory" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
