@model NewsManagementSystem.Models.SystemAccount

@{
    ViewData["Title"] = "Login";
}

<style>
    .login-container {
        max-width: 400px;
        margin: 50px auto;
        padding: 30px;
        background: white;
        border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }

    h1, h4 {
        text-align: center;
        color: #333;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .btn-primary {
        width: 100%;
        padding: 10px;
        font-size: 16px;
    }

    .register-link {
        display: block;
        text-align: center;
        margin-top: 15px;
        color: #007bff;
        text-decoration: none;
    }

        .register-link:hover {
            text-decoration: underline;
        }

    .text-danger {
        font-size: 14px;
    }
</style>

<div class="login-container">
    <h1>Login</h1>
    <hr />

    <form asp-action="Login">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="AccountName" class="control-label"></label>
            <input asp-for="AccountName" class="form-control" required/>
            <span asp-validation-for="AccountName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="AccountPassword" class="control-label"></label>
            <input asp-for="AccountPassword" type="password" class="form-control" required />
            <span asp-validation-for="AccountPassword" class="text-danger"></span>
        </div>
        @if (!string.IsNullOrEmpty(ViewBag.Message))
        {
            <div class="alert alert-danger">@ViewBag.Message</div>
        }

        <div class="form-group">
            <input type="submit" value="Login" class="btn btn-primary" />
        </div>
    </form>

    <a asp-action="Registration" class="register-link">Don't have an account? Register here</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
